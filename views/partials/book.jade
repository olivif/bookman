div.book-main.col-md-8
    div.book-header
        div.book-header-item.thumb
            img(src="{{book.thumb}}")

        div.book-header-item.title
            h2 {{book.title}}
            h3 {{book.author.name}}

    div.book-description
        p {{book.description}}

div.col-md-4
    h3 More from this author
    ul
        li(ng-repeat="authorBook in authorBooks")
            div 
                img(src="{{authorBook.thumb}}")
                h5 {{authorBook.title}}
                p Description for book