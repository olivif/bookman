div
    container
        div.shelf-menu.col-md-2
            h3 Shelves 
            ul.nav.nav-pills.nav-stacked
                li(ng-repeat="shelf in shelves", ng-class="{active: shelf === selectedShelf}")
                    a(href="#", ng-click="selectShelf(shelf)"){{shelf.name}} ({{shelf.bookCount}})  
                
        div.col-md-10 
            h3 
            div(ng-show="shelves.selectedShelf.bookCount === 0")
                p You have no books here
            ul
                li(ng-repeat="book in shelves.selectedShelf.books track by $index")
                    div.card-overlay
                        a.card(href="#", style='background-image: url({{book.thumb}});background-repeat: no-repeat;background-size: 100% auto;')